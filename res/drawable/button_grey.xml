<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/darkgrey1" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="20dp"
                android:right="10dp"
                android:bottom="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/lightgrey1"
                android:centerColor="@color/lightgrey2"
                android:endColor="@color/lightgrey3"
                android:angle="-90" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="20dp"
                android:right="10dp"
                android:bottom="20dp" />
        </shape>
    </item>
</selector>